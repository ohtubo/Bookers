<h1>Editing Book</h1>

<%= form_with model:@book, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>

<a><%= link_to 'show', booklist_path(@book.id) %></a>
