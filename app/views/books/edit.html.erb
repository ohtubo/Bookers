
<h1>Editing Book</h1>

<%= form_with model:@book, local: true do |f| %>

  <%= render 'layouts/error_form', book: @book %>

  <div class="field">

    <label for="book_title"><%= f.label :title %></label>
    <%= f.text_field :title %>

  </div>

  <div class="field">

    <label for="book_body"><%= f.label :body %></label>
    <%= f.text_area :body %>

  </div>

  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

<a><%= link_to 'Show', booklist_path(@book.id) %></a>
|
<a><%= link_to "Back", books_path %></a>

